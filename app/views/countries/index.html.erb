  <% @countries.each do |country| %>
    <tr>
      <td><%= country.title %></td>
      <td><%= link_to 'Delete', country_path(country), method: :delete, data: {confirm: 'Are you sure?' } %></td>
      <td><%= link_to 'Show', country_path(country.id)%> </td>
    </tr>
  <% end %>
</table>

